

<%= render @brewery %>

<%= button_to "change activity", toggle_activity_brewery_path(@brewery.id), data: {turbo_method: "post"}, class: "btn btn-primary" %>

<div>
  <%= link_to('Edit this brewery',  edit_brewery_path(@brewery)) if current_user %>
  <%= link_to "Back to breweries", breweries_path %>

  <%= button_to('Destroy this brewery',  @brewery, method: :delete, class: 'btn btn-danger') if (current_user && current_user.admin) %>
</div>
