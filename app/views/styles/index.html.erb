

<h1>List of styles</h1>

<div>
  <% @styles.each do |style| %>
    <div id="<%= dom_id style %>">
  <p>
    <b>Name:</b><%= style.name %> 
  </p>
  <p>
    <b>Description: </b><%= style.description %>
  </p>
</div>
    <p>
        <%= link_to "Show this style", style %>
      </p>
  <% end %>
</div>

<p>
<%= link_to("New style", new_style_path, class:'btn btn-primary') %>
</p>