<p style="color: green"><%= notice %></p>

<%= render @beer_club %>

<h3>members</h3>
  <p>
  <% @beer_club.users.each do |user| %>
    <%= link_to user.username, user %>
  <% end %>
  </p>

<% if current_user %>
  <% if !@beer_club.users.include? (current_user) %>
    <h4>join club:</h4>
    <%= form_with(model: @membership) do |form| %>
      <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.submit "Join the beer club" %>
    <% end %>
  <% else %>
    <%= button_to("End the membership", @membership = Membership.find_by(beer_club_id: @beer_club.id, user_id: current_user.id), method: :delete) if current_user %>
  <% end %>
<% end %>  

<div>
  <%= link_to("Edit this beer club", edit_beer_club_path(@beer_club)) if current_user %> |
  <%= link_to "Back to beer clubs", beer_clubs_path %>

  <%= button_to("Destroy this beer club", @beer_club, method: :delete) if current_user %>
</div>
